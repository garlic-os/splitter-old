{
	"name": "splitter",
	"type": "module",
	"version": "1.0.0",
	"description": "Upload large files to Discord by splitting them.",
	"main": "index.js",
	"scripts": {
		"start": "npm run build && npm run register && npm run dev",
		"dev": "node dist/index.js",
		"register": "node dist/register.js",
		"clean": "rimraf dist",
		"copy-files": "copyfiles -u 1 src/**/*.html src/**/*.css dist/",
		"build": "npm run clean && npm run copy-files && tsc",
		"watch": "npm run build -- -w"
	},
	"license": "MIT",
	"dependencies": {
		"better-sqlite3": "^8.0.1",
		"cors-anywhere": "^0.4.4",
		"discord.js": "^14.7.1",
		"express": "^4.18.2",
		"http-status-codes": "^2.2.0"
	},
	"devDependencies": {
		"@types/better-sqlite3": "^7.6.3",
		"@types/express": "^4.17.16",
		"@types/node": "^18.11.18",
		"copyfiles": "^2.4.1",
		"rimraf": "^4.1.2",
		"typescript": "^4.9.5"
	}
}
